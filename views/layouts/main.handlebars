<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <nav class="bg-green-500 flex-items-center justify-between">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex justify-between">
        <div class="flex space-x-7">
          <div>
            <!-- Website Logo -->
            <a href="#" class="flex items-center py-4 px-2">

              <span class="font-bold text-white text-lg">Golf Buddies</span>
            </a>
          </div>
          <!-- Primary Navbar items -->
          <div class="hidden md:flex items-center space-x-1">
            <a
              href="/"
              class="py-4 px-2 text-white font-semibold hover:text-gray-500 transition duration-300"
            >Home</a>
            <a
              href="/profile"
              class="py-4 px-2 text-white font-semibold hover:text-gray-500 transition duration-300"
            >Profile</a>
            <a
              href="/playercards"
              class="py-4 px-2 text-white font-semibold hover:text-gray-500 transition duration-300"
            >Roster</a>
          </div>
        </div>
        <!-- Secondary Navbar items -->
        <div class="hidden md:flex items-center space-x-3">
          <a
            href="/login"
            class="inline-block text-sm px-4 py-2 leading-none border rounded text-white font-semibold border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"
          >Login</a>
        </div>
        <!-- Mobile menu button -->
        <div class="md:hidden flex items-center">
          <button class="outline-none mobile-menu-button">
            <svg
              class="w-6 h-6 text-white hover:text-green-500"
              x-show="!showMenu"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- mobile menu -->
    <div class="hidden mobile-menu">
      <ul class="">
        <li class="#homepage"><a
            href="/"
            class="block text-sm px-2 py-4 text-white hover:bg-green-800 transition duration-300"
          >Home</a></li>
        <li><a
            href="/profile"
            class="block text-sm px-2 py-4 text-white hover:bg-green-800 transition duration-300"
          >Profile</a>
        </li>
        <li><a
            href="/chat"
            class="block text-sm px-2 py-4 text-white hover:bg-green-800 transition duration-300"
          >Chat</a>
        </li>
        <li><a
            href="/playercards"
            class="block text-sm px-2 py-4 text-white hover:bg-green-800 transition duration-300"
          >Roster</a>
        </li>
        <li><a
            href="/login"
            class="block text-sm px-2 py-4 text-white hover:bg-green-800 transition duration-300"
          >Login</a></li>
      </ul>
    </div>
    <script>
      const btn = document.querySelector("button.mobile-menu-button"); const
      menu = document.querySelector(".mobile-menu");
      btn.addEventListener("click", () => { menu.classList.toggle("hidden"); });
    </script>
  </nav>
  <body class="bg-gray-500">
    {{{body}}}

